#!/bin/sh
list=`curl -s http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html | grep -P 'literal">[a-z0-9]+  \w+' -A 37 | cut -d ' ' -f 3 | sed 's/<\/code>//g'`
. ../ports/xorg-app/Pkgfile
echo $list
echo $source
tfff=0
for i in ${list%EOF*}; do
	echo "$source" | grep -q -F "$i" || {
		sed -i -r "/${i%-*}.+tar.+/d" ../ports/xorg-app/Pkgfile
		sed -i "s/source=\"/&\n$i/g" ../ports/xorg-app/Pkgfile
		rm ../ports/xorg-app/*${i%-*}*tar*
		tfff=1
		exit
	}
done
[ "$tfff" -eq 1 ] && {
	pkg -Muf xorg-app
	pkg -M xorg-app
	pkg -S xorg-app
}
