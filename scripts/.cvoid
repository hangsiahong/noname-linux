#!/bin/bash
. $1/$2/Pkgfile
___version=$version
t=0
while true;do
	version=`curl -s -L https://raw.githubusercontent.com/voidlinux/void-packages/master/srcpkgs/$3/template | grep -P '^version=' -m 1 | cut -d '=' -f 2`
	[ "$version" ] && break
	t=$((t+1))
	[ "$t" -eq 5 ] && {
		t=0
		echo "$2: can not get" >> ./result
		break
	}
done
version=`echo $version | tr -d '\n'`
if [ "$version" != "$___version" ]; then
	echo "$2: update from $___version to $version" >> ./result
fi
rm -rf ./.$2
