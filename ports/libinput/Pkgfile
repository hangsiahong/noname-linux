name=libinput
version=1.8.1
deps="mtdev libevdev eudev graphviz"
desc="Libinput translates evdev events into Wayland events"
source="http://www.freedesktop.org/software/$name/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/ --libexecdir=/lib --enable-libwacom=disable --disable-static --disable-documentation
	make || die
	make install DESTDIR="$pkgdir" || die
}
