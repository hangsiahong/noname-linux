name=perl-glib-object-introspection
version=0.042
desc="The Perl gobject module"
deps="glib-perl gobject-introspection"
source="http://search.cpan.org/CPAN/authors/id/X/XA/XAOC/Glib-Object-Introspection-$version.tar.gz"

build() {
	cd Glib-Object-Introspection-$version
	export PERL_MM_USE_DEFAULT=1 PERL5LIB="" \
		PERL_AUTOINSTALL=--skipdeps \
		PERL_MM_OPT="INSTALLDIRS=vendor DESTDIR='$pkgdir'" \
		PERL_MB_OPT="--installdirs vendor --destdir '$pkgdir'" \
		MODULEBUILDRC=/dev/null
	perl Makefile.PL
	make || die
	make -j1 DESTDIR="$pkgdir" install || die
}
