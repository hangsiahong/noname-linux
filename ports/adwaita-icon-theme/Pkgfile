version="3.30.0"
makedeps=["intltool", "hicolor-icon-theme"]
deps=["intltool", "hicolor-icon-theme"]
desc="default fallback used by the icon theme specification"
source=[{url="http://mirrors.ustc.edu.cn/gnome/sources/adwaita-icon-theme/${version%.*}/adwaita-icon-theme-$version.tar.xz"}]

build='''
	cd adwaita-icon-theme-$version
	./configure --prefix=/ --disable-icon-mapping
	make
	make DESTDIR="$pkgdir" install
'''
