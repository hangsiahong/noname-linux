name=xbitmaps
version=1.1.1
desc="Bitmaps for X"
deps="util-macros"
source="http://xorg.freedesktop.org/releases/individual/data/xbitmaps-$version.tar.bz2"

build() {
	cd xbitmaps-$version

	./configure --prefix=/ --libdir=/lib --disable-static

	make || die
	make DESTDIR="$pkgdir" install || die
	mv "$pkgdir"/share "$pkgdir"/lib
}
