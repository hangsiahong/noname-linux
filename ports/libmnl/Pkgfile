name=libmnl
version=1.0.4
deps=musl
desc="Minimalistic user-space library oriented to Netlink developers"
source="http://www.netfilter.org/projects/${name}/files/${name}-${version}.tar.bz2"

build() {
	cd $name-$version
	./configure --prefix= \
		--disable-static 
	make  || die
	make DESTDIR="$pkgdir" install  || die
}
