. ../v4l-utils/Pkgfile
name=v4l-utils-32
deps="v4l-utils libjpeg-turbo-32"

build() {
	cd v4l-utils-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --sysconfdir=/etc --sbindir=/bin --libdir=/lib32
	make -C lib || die
	make -j1 -C lib install DESTDIR="${pkgdir}/" || die
	rm -rf "${pkgdir}"/include
}
