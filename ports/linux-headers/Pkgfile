. $PORTS/linux/Pkgfile
name=linux-headers
desc="Linux system kernel"
conflicts=
deps=

build() {
	cd linux-${version%.*}
	patch -p1 -i "${srcdir}/libc-4.8-portability.patch" || die
	make headers_install ARCH=$ARCH INSTALL_HDR_PATH="$pkgdir"  || die
	find "$pkgdir" \( -name .install -o -name ..install.cmd \) -exec \
		rm -f {} \;
	rm -r "$pkgdir"/include/drm
}

post() {
	true
}
