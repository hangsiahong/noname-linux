name=graphviz
version=2.40.1
desc='Graph visualization software'
deps="libtool gd librsvg libxaw ghostscript gts perl python pango gtk"
source="http://www.graphviz.org/pub/graphviz/stable/SOURCES/graphviz-${version}.tar.gz
ghostscript918.patch"

ext() {
	cd graphviz-$version
	patch -p1 -i ../ghostscript918.patch || die
}

build() {
	cd graphviz-$version
	export LIBPOSTFIX=/
	export PYTHON=python
	./configure --prefix= --without-tcl
	make || die
	make DESTDIR="${pkgdir}" install || die
}

post() {
	rm -f "$pkgdir"/lib/graphviz/config
	rm -f "$pkgdir"/lib/graphviz/config6
	if [ "$UPD" -eq 1 ]; then
		pchroot "$ROOT" /bin/dot -c
	fi
}
