name=json-c-32
version=0.12.1
deps=musl
desc="JSON implementation in C"
source="https://s3.amazonaws.com/json-c_releases/releases/json-c-$version.tar.gz"

build() {
	cd json-c-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"

	./configure --prefix=/ --disable-static --libdir=/lib32
	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/include
}
