name=python-ply
version=3.10
deps="python-setuptools"
desc="Implementation of lex and yacc parsing tools"
source="http://www.dabeaz.com/ply/ply-$version.tar.gz"

build() {
	cp -r ply-$version set3
	cd ply-$version
	/bin/python setup.py build || die
	/bin/python setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
	cd ../set3
	/bin/python3 setup.py build || die
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
}

