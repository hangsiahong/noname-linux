name=file
version=5.31
_version=`echo $version | sed 's/\./_/g'`
deps=zlib
desc="File type identification utility"
source="https://github.com/file/file/archive/FILE$_version.tar.gz"

build() {
	cd $name-FILE$_version
	autoreconf -fi
	./configure \
		--prefix= \
		--disable-static \
		--datadir=/share/file \
		--enable-fsect-man5 \
		--enable-shared 
	
	make  || die
	make DESTDIR="$pkgdir" install  || die
}

