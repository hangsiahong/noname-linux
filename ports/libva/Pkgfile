version="2.4.0"
desc="vaapi"
deps=["libxfixes", "libx11", "libxext", "libdrm", "wayland"]
makedeps=["libxfixes", "libx11", "libxext", "libdrm", "wayland-protocols"]
source=[{url="https://github.com/01org/libva/releases/download/$version/libva-$version.tar.bz2"}]

build='''
	cd libva-$version

	./configure --prefix= --disable-static

	make
	make DESTDIR="$pkgdir" install
'''
