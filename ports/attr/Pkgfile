name=attr
version=2.4.47
desc="Extented attributes library"
source="http://download-mirror.savannah.gnu.org/releases/$name/$name-$version.src.tar.gz
attr-2.4.46-ifdef_cplusplus.patch
attr-2.4.47-fix-missing-sys_types_h.patch
"
deps="musl"

ext() {
	cd $name-$version
	for i in $source;do
		case $i in
		*patch) patch -p1 < ../$i || die;;
		esac
	done
}

build() {
	cd $name-$version
	unset PLATFORM #184564
	export DEBUG=-DNDEBUG
	export OPTIMIZER="$CFLAGS"
	export INSTALL_USER=root
	export INSTALL_GROUP=root
	./configure \
		--prefix= \
		--enable-shared \
		--disable-static \
		--enable-gettext \
		--enable-nls \
		--libexecdir=/lib 
	make  || die
	make -j1 DIST_ROOT="$pkgdir" install install-lib install-dev  || die
	rm -r "$pkgdir"/share/doc 
}
