name=alsa-utils
version=1.1.4
desc="ALSA utils"
source="ftp://ftp.alsa-project.org/pub/utils/$name-$version.tar.bz2"
deps="alsa-lib fftw pciutils psmisc ncurses libsamplerate xmlto"

build() {
	cd $name-$version
	./configure --prefix= \
	    --sbindir=/bin \
	    --with-udev-rules-dir=/lib/udev/rules.d \
	    --with-alsactl-lock-dir=/run/lock \
	    --disable-alsaconf \
	    --disable-bat
	make || die
	make DESTDIR="$pkgdir" install || die
	mkdir -p "$pkgdir"/var/lib/alsa
	cd alsactl
	make 90-alsa-restore.rules || die
	cd ..
	install -Dm644 alsactl/90-alsa-restore.rules \
	${pkgdir}/lib/udev/rules.d/90-alsa-restore.rules || die
}
