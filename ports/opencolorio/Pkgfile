name=opencolorio
version=1.0.9
desc="A color management framework for visual effects and animation"
deps="python3 cmake"
source="https://github.com/imageworks/OpenColorIO/archive/v${version}.tar.gz"

build() {
	cd OpenColorIO-$version
	for i in $source; do
		case $i in
		*patch) patch -p0 < ../$i || die;;
		esac
	done

	[ -d build ] && rm -r build
	mkdir build && cd build

	cmake .. \
	-DCMAKE_INSTALL_PREFIX=

	make || die
	make DESTDIR="${pkgdir}" install || die
}
