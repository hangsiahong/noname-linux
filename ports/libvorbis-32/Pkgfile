name=libvorbis-32
version=1.3.5
deps="libogg-32 libvorbis"
source="http://downloads.xiph.org/releases/vorbis/libvorbis-$version.tar.xz"
desc="Vorbis codec library"

build() {
	cd libvorbis-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"

	./configure --prefix=/ --libdir=/lib32

	make || die
	make DESTDIR=$pkgdir install || die

	rm -r $pkgdir/share
	rm -r $pkgdir/include
}

