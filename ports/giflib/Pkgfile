version="5.1.4"
makedeps=["xmlto", "docbook-xml", "docbook-xsl"]
desc="A library for reading and writing gif images"
source=[
	{url="http://nchc.dl.sourceforge.net/sourceforge/giflib/giflib-${version}.tar.bz2"},
]

build='''
	cd giflib-$version
	./configure --prefix= --disable-static --disable-docs
	make
	make DESTDIR="$pkgdir" install
'''
