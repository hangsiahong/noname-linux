. ../libtasn1/Pkgfile
name=libtasn1-32
deps=libtasn1

build() {
	cd libtasn1-${version}
	export CC='gcc -m32'
	export CXX='g++ -m32'
	export PKG_CONFIG_PATH='/lib32/pkgconfig'
	./configure --prefix= --libdir=/lib32
	make || die
	make DESTDIR="${pkgdir}" install || die
	rm -rf "$pkgdir"/include
	rm -rf "$pkgdir"/bin
	rm -rf "$pkgdir"/share
}
