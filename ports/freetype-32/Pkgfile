. ../freetype/Pkgfile
name=freetype-32
deps="zlib-32 libpng-32 bzip2-32 freetype"

build() {
	cd freetype-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= \
		--without-harfbuzz \
		--libdir=/lib32 \
		--disable-static \
		--with-zlib 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -r "$pkgdir"/include
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/bin
}

post() {
	true
}
