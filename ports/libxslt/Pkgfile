name=libxslt
version=1.1.29
desc="XSL Transformations library."
deps="libxml2 xz zlib python libgcrypt docbook-xml"
source="http://xmlsoft.org/sources/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure \
		--prefix=/
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
	make || die
	make DESTDIR=$pkgdir install || die
	rm -r $pkgdir/share/doc
}
