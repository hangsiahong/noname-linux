. $PORTS/libva/Pkgfile
name=libva-32
deps="xorg-proto libxfixes-32 libx11-32 libdrm-32 libva"

build() {
	cd libva-$version
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"

	./configure --prefix= --disable-static --libdir=/lib32

	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/include
}
