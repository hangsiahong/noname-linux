. ../flac/Pkgfile
name=flac-32
deps="libogg-32 flac nasm"

build() {
	cd flac-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"

	./configure --prefix=  --disable-static \
	--libdir=/lib32 \
	--enable-shared \
	--enable-ogg \
	--enable-sse \
	--with-pic

	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/include
}
