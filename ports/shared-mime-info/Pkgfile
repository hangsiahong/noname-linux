version="1.10"
desc="Freedesktop.org Shared MIME Info"
makedeps=["glib", "libxml2", "intltool"]
deps=["glib", "libxml2"]
source=[
	{url="http://freedesktop.org/~hadess/shared-mime-info-${version}.tar.xz"},
	{url="mime.toml"},
]

build='''
	cd shared-mime-info-$version
	export ac_cv_func_fdatasync=no
	./configure --prefix=
	make -j1
	make DESTDIR="${pkgdir}" install
	install -Dm644 ../mime.toml "$pkgdir/${HOOKS#$ROOT}"/mime.toml
'''
