name=aircrack-ng
_aircrack_ver=1.2
_aircrack_rc=rc4
version="${_aircrack_ver}${_aircrack_rc}"
deps="zlib libressl libnl sqlite ethtool net-tools iw"
desc="A key cracker for the 802.11 WEP and WPA-PSK protocols"
source="http://download.aircrack-ng.org/${name}-${_aircrack_ver}-${_aircrack_rc}.tar.gz"

build() {
	cd $name-${_aircrack_ver}-${_aircrack_rc}
	make CC=$CC CXX=$CXX sqlite=true libnl=true experimental=true || die
	make DESTDIR="$pkgdir" sqlite=true experimental=true \
		bindir=/bin sbindir=/bin mandir=/share/man/man1/ \
		smandir=/share/man/man8/ install || die
}
