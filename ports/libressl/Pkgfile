version="2.8.3"
desc="LibreSSL is av ersion of the TLS/crypto stack forked from OpenSSL."
source=[{url="http://ftp.openbsd.org/pub/OpenBSD/LibreSSL/$name-$version.tar.gz"}]
deps=["musl"]

build='''
	cd libressl-$version
	./configure --prefix= --enable-shared --disable-static 
	make
	make DESTDIR="$pkgdir" install
	rm "$pkgdir"/etc/ssl/cert.pem
'''
