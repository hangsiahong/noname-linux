name=libuv
version=1.13.1
deps="libtool pthread-stubs"
desc="Multi-platform support library with a focus on asynchronous I/O"
source="http://dist.libuv.org/dist/v${version}/libuv-v${version}.tar.gz"

build() {
	cd libuv-v$version

	NOCONFIGURE=1 ./autogen.sh 
	./configure --prefix=/

	make || die
	make DESTDIR=$pkgdir install || die
}
