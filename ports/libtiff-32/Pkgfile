. $PORTS/libtiff/Pkgfile
name=libtiff-32
deps="libjpeg-turbo-32 zlib-32 xz-32 libtiff"

build() {
	cd tiff-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --libdir=/lib32 --includedir=/include/libtiff32
	make || die
	make DESTDIR="${pkgdir}" install || die
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/share
}
