name=compton
version=0.1_beta2.5
desc='X compositor that may fix tearing issues'
deps="mesa dbus libxcomposite libxdamage libxrandr libpcre libconfig libxinerama hicolor-icon-theme desktop-file-utils asciidoc cmake xorg-app"
source="compton.conf"

ext() {
	git clone https://github.com/chjj/compton
	cd compton
	git reset --hard b7f43ee
}

build() {
	cd compton
	COMPTON_VERSION=v$version make PREFIX= compton docs || die
	make PREFIX="$pkgdir" install || die
	install -Dm644 compton.sample.conf "$pkgdir/etc/xdg/compton.conf.example"
	install -Dm644 "$srcdir"/compton.conf "$pkgdir/etc/xdg/compton.conf"
}
