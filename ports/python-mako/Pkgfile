name=python-mako
version=1.0.7
deps="python-setuptools python-beaker python-markupsafe"
desc="A super-fast templating language that borrows the best ideas from the existing templating languages"
source="https://pypi.io/packages/source/M/Mako/Mako-$version.tar.gz"

build() {
	cp -r Mako-$version 3
	cd 3
	/bin/python3 setup.py build || die
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
	mv "$pkgdir"/bin/mako-render "$pkgdir"/bin/mako-render3
	cd ../Mako-$version
	/bin/python setup.py build || die
	/bin/python setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
}

