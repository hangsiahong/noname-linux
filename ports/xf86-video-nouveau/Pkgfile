name=xf86-video-nouveau
version=1.0.15
deps="xorg-server xcb-util libxscrnsaver libdrm eudev"
desc="opensource nvidia graphics video driver"
source="http://xorg.freedesktop.org/archive/individual/driver/xf86-video-nouveau-$version.tar.bz2
"

build() {
	cd xf86-video-nouveau-$version
	./configure --prefix=/ --libexecdir=/lib --disable-static --enable-dri3
	make || die
	make DESTDIR="$pkgdir" install || die
}
