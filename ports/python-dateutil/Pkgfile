name=python-dateutil
version=2.6.0
deps="python-setuptools python-six"
source="https://github.com/dateutil/dateutil/archive/$version.tar.gz"
desc="Provides powerful extensions to the standard datetime module"

build() {
	cp -r dateutil-$version date3
	cd dateutil-$version
	/bin/python setup.py build || die
	/bin/python setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die

	cd ../date3
	/bin/python3 setup.py build || die
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
}

