version="2.4.96"
desc="Userspace interface to kernel DRM services"
makedeps=["libpciaccess"]
deps=["libpciaccess"]
source=[
	{url="http://dri.freedesktop.org/libdrm/libdrm-$version.tar.bz2"},
	{url="musl.patch"},
]

ext='''
	cd libdrm-$version
	patch -p0 -i "$srcdir/musl.patch"
'''

build='''
	cd libdrm-$version
	./configure \
		--prefix= \
		--disable-static --disable-udev \
		--enable-radeon --enable-nouveau --enable-intel \
		--enable-libkms \
		--disable-valgrind

	make
	make DESTDIR="$pkgdir" install
'''
