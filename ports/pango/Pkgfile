name=pango
version=1.40.5
desc="library for layout and rendering of text"
deps="expat fontconfig glib cairo libxft libxext gobject-introspection"
source="http://download.gnome.org/sources/$name/1.40/$name-$version.tar.xz"

build() {
        cd $name-$version
	./configure --prefix= --disable-static --with-included-modules=basic-fc --with-xft --disable-gtk-doc
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
        make
        make DESTDIR="$pkgdir" install
        rm -r "$pkgdir"/share/gtk-doc
}
