version="1.42.4"
desc="library for layout and rendering of text"
makedeps=["expat", "fontconfig", "harfbuzz", "glib", "cairo", "libxft", "libxext", "cairo", "gobject-introspection"]
deps=["expat", "fontconfig", "harfbuzz", "glib", "cairo", "libxft", "libxext", "cairo"]
source=[{url="https://download.gnome.org/sources/pango/${version%.*}/pango-$version.tar.xz"}]

build='''
	noname-meson pango-$version build -Denable_docs=false
	ninja -C build
	DESTDIR="$pkgdir" ninja -C build install
'''
