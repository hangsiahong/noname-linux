name=xtrans
version=1.3.5
deps="util-macros"
desc="Library of code to handle network protocol transport"
source="http://xorg.freedesktop.org/releases/individual/lib/xtrans-$version.tar.bz2"

build() {
	cd xtrans-$version

	./configure --prefix= --disable-static

	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/share/doc
}

