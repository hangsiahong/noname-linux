name=webrtc-audio-processing
version=0.3
desc="AudioProcessing library based on Google's implementation of WebRTC"
source="
execinfo.patch
http://freedesktop.org/software/pulseaudio/webrtc-audio-processing/$name-$version.tar.xz
"

build() {
	cd $name-$version
	patch -p1 < ../execinfo.patch
	./configure \
		--prefix= \
		--disable-static
	make || die
	make DESTDIR="$pkgdir" install || die
}
