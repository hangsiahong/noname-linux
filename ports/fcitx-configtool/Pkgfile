name=fcitx-configtool
version=0.4.9
desc="GTK based config tool for Fcitx"
deps="fcitx iso-codes"
source="http://download.fcitx-im.org/$name/$name-$version.tar.xz"

build(){
	cd $name-$version

	cmake . \
	-DCMAKE_INSTALL_PREFIX= \
	-DENABLE_GIR=OFF

	make || die
	make DESTDIR="$pkgdir" install || die
}
