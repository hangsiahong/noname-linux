name=toxcore
_name=c-toxcore
version=0.1.9
desc="Secure, configuration-free, P2P Skype replacement backend"
deps="libconfig libsodium libvpx opus check"
source="https://github.com/TokTok/${_name}/archive/v${version}.tar.gz"

build() {
	cd $_name-$version
	cmake -DCMAKE_INSTALL_PREFIX= \
	-DDHT_BOOTSTRAP=on \
	-DBOOTSTRAP_DAEMON=on \
	-DBUILD_NTOX=off
	make || die
	make DESTDIR="$pkgdir" install || die
}
