version="2.1.0"
desc="va driver for intel cpu"
deps=["libva", "wayland"]
makedeps=["xorgproto", "libva", "wayland-protocols"]
source=[{url="https://github.com/01org/intel-vaapi-driver/releases/download/$version/intel-vaapi-driver-$version.tar.bz2"}]

build='''
	cd intel-vaapi-driver-$version
	./configure --prefix= --disable-static --enable-wayland
	make
	make DESTDIR="$pkgdir" install
'''
