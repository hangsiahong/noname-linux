name=libx11
version=1.6.5
desc="X client library"
deps="xorg-proto xtrans libxcb perl"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$version.tar.bz2"

build() {
	cd libX11-$version

	./configure --prefix= \
	--enable-ipv6 --enable-xlocaledir --without-xmlto \
	--disable-secure-rpc --disable-static --enable-malloc0returnsnul

	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/share/doc
}
