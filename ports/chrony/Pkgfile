name=chrony
version=3.1
deps="nss readline libcap"
desc="Lightweight NTP client and server"
source="http://download.tuxfamily.org/chrony/${name}-${version}.tar.gz"

build() {
	cd $name-$version
	./configure \
		--prefix=/ \
		--runstatedir=/run \
		--sbindir=/bin \
		--disable-static 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	install -d $pkgdir/var/lib/chrony
	install -d $pkgdir/var/log/chrony
	chown -R 183:183 "$pkgdir"/var/lib/chrony
	install -Dm644 examples/chrony.conf.example1 $pkgdir/etc/chrony.conf
}
