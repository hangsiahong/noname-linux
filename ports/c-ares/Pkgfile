name=c-ares
version=1.13.0
desc='C library that performs DNS requests and name resolves asynchronously'
deps=musl
source="https://c-ares.haxx.se/download/c-ares-$version.tar.gz"

build() {
	cd c-ares-$version
	./configure --prefix= --enable-shared
	make || die
	make DESTDIR="$pkgdir" install || die
}
