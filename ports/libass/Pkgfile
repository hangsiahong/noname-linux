version="0.14.0"
desc='A portable library for SSA/ASS subtitles rendering'
makedeps=["fribidi", "harfbuzz", "fontconfig", "glib", "nasm"]
deps=["fribidi", "harfbuzz", "fontconfig", "glib"]
source=[{url="https://github.com/libass/libass/releases/download/${version}/libass-${version}.tar.xz"}]

build='''
	cd libass-${version}

	./configure \
		--prefix= \
		--enable-fontconfig
	make
	make DESTDIR="${pkgdir}" install
'''
