version="1.0"
desc='Wallpaper tool for Wayland compositors'
deps=["wayland", "cairo", "gdk-pixbuf"]
makedeps=["xorgproto", "wayland-protocols", "cairo", "gdk-pixbuf"]
source=[
	{name="$name-$version.tar.gz", url="https://github.com/swaywm/swaybg/archive/$version.tar.gz"},
]

build='''
	noname-meson "$name-$version" build \
		--buildtype=plain
	ninja -C build
	DESTDIR="$pkgdir/" ninja -C build install
'''
