version="2.0.9"
desc="A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard (Version 2)"
makedeps=["libxext", "libxcursor", "libxrender", "libx11", "mesa", "dbus", "pulseaudio", "wayland-protocols"]
deps=["libxext", "libxcursor", "libxrender", "libx11", "mesa", "dbus", "pulseaudio", "wayland"]
source=[{name="sdl2-$version.tar.gz", url="http://www.libsdl.org/release/SDL2-${version}.tar.gz"}]


build='''
	cd SDL2-$version
	mkdir build
	cd build
	cmake .. \
		-DCMAKE_INSTALL_PREFIX= \
		-DSDL_STATIC=OFF \
		-DSDL_DLOPEN=ON \
		-DARTS=OFF \
		-DESD=OFF \
		-DNAS=OFF \
		-DALSA=ON \
		-DPULSEAUDIO_SHARED=ON \
		-DVIDEO_WAYLAND=ON \
		-DRPATH=OFF \
		-DCLOCK_GETTIME=ON \
		-DJACK_SHARED=OFF
	make
	make DESTDIR="$pkgdir" install
'''
