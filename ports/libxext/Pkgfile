name=libxext
version=1.3.3
desc="Common X extensions client library"
deps="libxau"
source="http://xorg.freedesktop.org/releases/individual/lib/libXext-$version.tar.bz2"

build() {
	cd libXext-$version
	
	./configure --prefix=

	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/share/doc
}

