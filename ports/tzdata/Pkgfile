name=tzdata
version=2017b
desc="Sources for Time Zone and Daylight Saving Time Data"
source="http://www.iana.org/time-zones/repository/releases/$name$version.tar.gz
http://www.iana.org/time-zones/repository/releases/tzcode$version.tar.gz"

build() {
	make -j1 install \
		CFLAGS="$CFLAGS" \
		DESTDIR=$pkgdir \
		TOPDIR=/ \
		TZDIR=/share/zoneinfo \
		ETCDIR=/bin \
		MANDIR=/share/man || die
}

