name=opus
version=1.2.1
desc="codec designed for interactive speech and audio transmission over the internet"
source="https://archive.mozilla.org/pub/opus/opus-$version.tar.gz"
deps="musl"

build() {
	cd opus-$version
	./configure --prefix= \
	    --sbindir=/bin \
	    --enable-custom-modes \
	    --disable-static \
	    --enable-intrinsics \
	    --enable-rtcd \
	    --enable-ambisonics
	make || die
	make DESTDIR="$pkgdir" install || die
}
