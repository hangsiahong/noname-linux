name=dnscrypt-proxy
version=1.9.4
desc="A tool for securing communications between a client and a DNS resolver"
deps="libsodium ldns"
source="http://download.dnscrypt.org/$name/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix= --sbindir=/bin --sysconfdir=/etc --without-systemd
	make || die
	make DESTDIR="$pkgdir" install || die
}
