name=python-markupsafe
version=1.0
deps="python-setuptools"
desc="Implements a XML/HTML/XHTML Markup safe string for Python"
source="https://pypi.io/packages/source/M/MarkupSafe/MarkupSafe-${version}.tar.gz"

build() {
	cp -r MarkupSafe-$version 3
	cd 3
	/bin/python3 setup.py build || die
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
	cd ../MarkupSafe-$version
	/bin/python setup.py build || die
	/bin/python setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
}

