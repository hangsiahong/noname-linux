version="0.8.0"
desc="xkbcommon is a library to handle keyboard descriptions, including loading them from disk, parsing them and handling their state"
makedeps=["libxcb", "meson"]
deps=["libxcb"]
source=[{url="http://xkbcommon.org/download/libxkbcommon-$version.tar.xz"}]

build='''
	noname-meson libxkbcommon-$version build -Denable-wayland=false -Denable-docs=false
	ninja -C build
	DESTDIR="$pkgdir" ninja -C build install
'''
