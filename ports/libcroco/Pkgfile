name=libcroco
version=0.6.12
desc="GNOME CSS2 parsing and manipulation toolkit"
deps="glib libxml2"
source="http://ftp.gnome.org/pub/gnome/sources/$name/0.6/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure \
		--prefix= \
		--disable-static

	make || die
	make DESTDIR="$pkgdir" install  || die
}
