. ../xz/Pkgfile
name=xz-32
deps="libressl-32"

build() {
	cd xz-$version
	for i in $source;do
		case $i in
		*.patch) patch -p1 -i "$srcdir"/"$i" ;;
		esac
	done
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure \
		--disable-static --enable-assume-ram=1024 \
		--libdir=/lib32 \
		--prefix=
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/include
}
