name=audacity
version=2.1.3
desc="A program that lets you manipulate digital audio waveforms"
deps="libmad lame wxgtk lilv soundtouch ffmpeg vamp-plugin-sdk sbsms flac desktop-file-utils expat suil"
source="https://github.com/audacity/audacity/archive/Audacity-${version}.zip"

build() {
	cd audacity-Audacity-${version}
	autoreconf -fi
	./configure --prefix=
	make || die
	make DESTDIR="${pkgdir}" install || die
}
