name=giblib
version=1.2.4
desc="A library that feh uses as a wrapper to imlib2"
deps="imlib2 libxext harfbuzz"
source="http://sourceforge.net/projects/slackbuildsdirectlinks/files/giblib/giblib-$version.tar.gz"

build() {
	cd giblib-$version

	./configure --prefix= -disable-static --with-imlib2-prefix=
	make || die
	make DESTDIR="${pkgdir}" docsdir=/share/doc/giblib install || die
}
