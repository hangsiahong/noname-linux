name=leveldb
version=1.20
desc="A fast and lightweight key/value database library"
deps="gperf snappy"
source="https://github.com/google/leveldb/archive/v$version.tar.gz"

build() {
	cd "leveldb-$version"
	make || die
	install -dm755 \
		"$pkgdir"/include/leveldb \
		"$pkgdir"/lib \
		"$pkgdir"/share/doc/leveldb

	install -m644 -t "$pkgdir/lib" "out-static/libleveldb.a"
	cp -P out-shared/libleveldb.so* "$pkgdir/lib"
	install -m644 -t "$pkgdir/include/leveldb" include/leveldb/*
	cp -r doc/* "$pkgdir/share/doc/leveldb"
}
