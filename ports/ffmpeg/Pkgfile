version="4.1"
makedeps=["libgmp", "fontconfig", "libressl", "libomxil-bellagio", "libva", "libvdpau", "opus", "libvpx", "speex", "celt", "x264", "sdl2", "libvorbis", "fontconfig", "pulseaudio", "bzip2", "x265", "xvidcore", "libmodplug", "libsoxr", "lame", "libwebp", "v4l-utils", "fribidi", "libtheora", "opencore-amr", "libass", "vid.stab", "openjpeg2", "gsm", "nasm"]
deps=["libgmp", "fontconfig", "libressl", "libomxil-bellagio", "libva", "libvdpau", "opus", "libvpx", "speex", "celt", "x264", "sdl2", "libvorbis", "fontconfig", "pulseaudio", "bzip2", "x265", "xvidcore", "libmodplug", "libsoxr", "lame", "libwebp", "v4l-utils", "fribidi", "libtheora", "opencore-amr", "libass", "vid.stab", "openjpeg2", "gsm"]
desc="Complete solution to record, convert and stream audio and video."
source=[{url="http://ffmpeg.org/releases/ffmpeg-$version.tar.bz2"}]

build='''
	cd ffmpeg-$version
	./configure \
		--prefix=/ \
		--bindir=/bin \
		--libdir=/lib \
		--shlibdir=/lib \
		--incdir=/include \
		--datadir=/share/ffmpeg \
		--docdir=/share/doc/ffmpeg \
		--pkgconfigdir=/lib/pkgconfig \
		--mandir=/share/man \
		--disable-debug \
		--enable-avisynth \
		--enable-avresample \
		--enable-fontconfig \
		--enable-gmp \
		--disable-gnutls \
		--enable-gpl \
		--disable-ladspa \
		--enable-libass \
		--enable-libfreetype \
		--enable-libfribidi \
		--enable-libgsm \
		--enable-libmodplug \
		--enable-libmp3lame \
		--enable-libopencore_amrnb \
		--enable-libopencore_amrwb \
		--enable-libopenjpeg \
		--enable-libopus \
		--enable-libpulse \
		--enable-libsoxr \
		--enable-libspeex \
		--disable-libssh \
		--enable-libtheora \
		--enable-libv4l2 \
		--enable-libvidstab \
		--enable-libvorbis \
		--enable-libvpx \
		--enable-libwebp \
		--enable-libx264 \
		--enable-libx265 \
		--enable-libxvid \
		--enable-shared \
		--enable-version3 \
		--disable-static \
		--enable-nonfree \
		--enable-vdpau \
		--enable-vaapi

	make
	make DESTDIR="$pkgdir" install install-man
'''
