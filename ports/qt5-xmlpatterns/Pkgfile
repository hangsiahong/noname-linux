name=qt5-xmlpatterns
version=5.9.1
desc='Support for XPath, XQuery, XSLT and XML schema validation'
deps="qt5-base"
source="http://download.qt.io/official_releases/qt/${version%.*}/$version/submodules/qtxmlpatterns-opensource-src-$version.tar.xz"

build() {
	mkdir -p build
	cd build

	qmake ../qtxmlpatterns-opensource-src-$version
	make || die
	make INSTALL_ROOT="$pkgdir" install || die

	find "$pkgdir/lib" -type f -name '*.prl' \
	-exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}
