. ../libice/Pkgfile
name=libice-32
deps="xorg-proto xtrans libice"

build() {
	cd libICE-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --disable-static --libdir=/lib32

	make || die
	make DESTDIR="$pkgdir" install || die

	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/include
}

