name=orc
version=0.4.26
desc="The Oild Runtime Compiler"
source="http://gstreamer.freedesktop.org/src/orc/orc-${version}.tar.xz
"
deps=musl

build() {
	cd $name-$version
	./configure \
		--prefix= \
		--disable-static
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
	make || die
	make DESTDIR="$pkgdir" install || die
}
