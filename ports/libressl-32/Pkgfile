. $PORTS/libressl/Pkgfile
name=libressl-32
deps="libressl"

build() {
	cd libressl-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"

	./configure --prefix= --disable-static --enable-shared --libdir=/lib32 --target=$TARGET32 \
	--host=$TARGET32 \
	--build=$TARGET32

	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/include
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/etc
}
