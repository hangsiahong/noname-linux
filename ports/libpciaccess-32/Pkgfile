. $PORTS/libpciaccess/Pkgfile
name=libpciaccess-32
deps=libpciaccess

build() {
	cd "libpciaccess-$version"
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"
	for i in $source; do
		case $i in
		*.patch) patch -p1 -i "$srcdir"/$i;;
		esac
	done
	sed -i -E 's/#include <unistd.h>/#include <unistd.h>\n#include <limits.h>/g' src/linux_sysfs.c
	./configure \
		--prefix= \
		--libdir=/lib32 \
		--disable-static
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/include
}
