name=zip
version=3.0
desc="Compression and file packaging/archive utility"
deps="bzip2"
source="http://downloads.sourceforge.net/sourceforge/infozip/zip30.tar.gz
10-zip-3.0-build.patch
20-zip-3.0-exec-stack.patch
30-zip-3.0-pic.patch"

build() {
	cd zip30
	for i in $source; do
		case $i in
			*.patch) patch -p0 -i "$srcdir"/$i ;;
		esac
	done
	make -f unix/Makefile LOCAL_ZIP="$CFLAGS" prefix=/ generic || die
	make -f unix/Makefile INSTALL=install prefix=/"$pkgdir" MANDIR="$pkgdir"/share/man/man1 install || die
}
