build() {
	for package in $source
	do
		pushd "`basename ${package%.tar.bz2}`"
		./configure --prefix= --disable-static \
		--sysconfdir=/etc \
		--localstatedir=/var 
		make  || die
		make -j1 DESTDIR="$pkgdir" install  || die
		popd
	done
	rm -r "$pkgdir"/share/doc
}
