name=harfbuzz
version=1.4.6
desc="An OpenType text shaping engine"
deps="freetype glib cairo graphite2 icu zlib libpng bzip2"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$version.tar.bz2"

build() {
	cd $name-$version
	./configure --prefix= \
	            --with-glib \
	            --with-cairo \
	            --with-icu \
		    --with-graphite2 \
		    --disable-static \
		    --disable-tests
	make || die
	make DESTDIR="$pkgdir" install || die
}
