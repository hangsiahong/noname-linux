. ../lcms2/Pkgfile
name=lcms2-32
deps="libtiff-32 lcms2 musl"

build() {
	cd lcms2-$version
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --disable-static --libdir=/lib32
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/include
	rm -r "$pkgdir"/bin
}
