name=libmpc
version=1.0.3
desc="C library for the arithmetic of complex numbers"
source="http://www.multiprecision.org/mpc/download/mpc-$version.tar.gz"
deps=libmpfr

build() {
	cd mpc-$version
	./configure \
		--prefix=
	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -r "$pkgdir"/share/info
}
