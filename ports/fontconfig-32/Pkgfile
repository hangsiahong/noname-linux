. ../fontconfig/Pkgfile
name=fontconfig-32
deps="freetype-32 expat-32 autoconf automake libtool fontconfig"

build() {
	cd fontconfig-$version
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure \
		--prefix=/ \
		--libdir=/lib32 \
		--sysconfdir=/etc \
		--with-templatedir=/etc/fonts/conf.avail \
		--with-templateinfdir=/etc/fonts/conf.avail.infinality \
		--with-xmldir=/etc/fonts \
		--localstatedir=/var \
		--disable-static \
		--with-default-fonts=/share/fonts \
		--with-add-fonts=/share/fonts \
		--disable-docs 

	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -f "$pkgdir"/etc/fonts/conf.d/README
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/etc
	rm -r "$pkgdir"/var
	rm -rf "$pkgdir"/share
	rm -r "$pkgdir"/include
}
