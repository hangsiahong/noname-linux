name=tdb
version=1.3.12
desc="The tdb library"
source="http://samba.org/ftp/tdb/tdb-$version.tar.gz"
deps="python libxslt"

build() {
	cd $name-$version
	for i in $source; do
		case $i in
			*.patch) patch -p1 -i "$srcdir"/$i ;;
		esac
	done
	./configure \
		--prefix=/
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -rf "$pkgdir"/share/info
}
