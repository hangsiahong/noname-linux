. ../expat/Pkgfile
name=expat-32
deps=expat

build() { 
	cd expat-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix=  --disable-static --libdir=/lib32
	make 
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/include
}
