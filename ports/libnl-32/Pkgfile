. $PORTS/libnl/Pkgfile
name=libnl-32
deps="flex bison"

build() {
	cd libnl-$version
	export CC="gcc -m32"
        export CXX="g++ -m32"
        export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --disable-static --sysconfdir=/etc/defaults --libdir=/lib32 --sbindir=/bin
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -r "$pkgdir"/share
	rm -r "$pkgdir"/etc
	rm -r "$pkgdir"/bin
	rm -r "$pkgdir"/include
}
