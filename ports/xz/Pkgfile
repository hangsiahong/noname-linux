name=xz
version=5.2.3
deps="libressl"
desc="Compression utility using the lzma algorithm, successor of lzma-utils"
source="http://tukaani.org/xz/$name-$version.tar.gz
default-threading.patch
io-size.patch
speedup.patch"

build() {
	cd $name-$version
	for i in $source;do
		case $i in
		*.patch) patch -p1 -i "$srcdir"/"$i" ;;
		esac
	done
	./configure \
		--disable-static --enable-assume-ram=1024 \
		--prefix= 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -r "$pkgdir"/share/doc
}
