name=python-packaging
version=16.8
deps="python-pyparsing python-six"
desc="Core utilities for Python packages"
source="https://github.com/pypa/packaging/archive/$version.tar.gz"

build() {
	cp -a packaging-$version p3
	cd p3
	/bin/python3 setup.py build || die
	/bin/python3 setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
	cd ../packaging-$version
	/bin/python setup.py build || die
	/bin/python setup.py install \
		--prefix= \
		--root=$pkgdir \
		--optimize=1 \
		--skip-build || die
}

