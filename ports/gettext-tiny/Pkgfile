version="git"
desc="lightweight replacements of the gnu gettext"
nostrip=true
source=[
	{
		url="git://github.com/sabotage-linux/gettext-tiny",
		branch="stubmode",
		protocol="git"
	},
]

build='''
	cd gettext-tiny
	make CFLAGS="-O0 -g2" LIBINTL=MUSL prefix=/
	make CFLAGS="-O0 -g2" LIBINTL=MUSL DESTDIR="$pkgdir" prefix=/ install
'''
