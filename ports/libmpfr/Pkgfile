name=libmpfr
version=3.1.5
desc="C library for multiple-precision floating-point computation swith correct rounding"
source="http://mirrors.ustc.edu.cn/gnu/mpfr/mpfr-${version%-*}.tar.bz2"
deps=libgmp

build() {
	cd mpfr-${version%-*}
	./configure \
		--prefix= \
		--disable-static \
		--enable-thread-safe 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -r "$pkgdir"/share/info
	rm -r "$pkgdir"/share/doc
}
