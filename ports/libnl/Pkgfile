name=libnl
version=3.2.29
ver=`echo $version | sed 's/\./_/g'`
deps="flex bison"
desc="Netlink Protocol Library Suite"
source="https://github.com/thom311/libnl/releases/download/libnl${ver}/libnl-${version}.tar.gz"

build() {
	cd $name-$version
	./configure --prefix= --disable-static --sbindir=/bin  
	make  || die
	make DESTDIR="$pkgdir" install  || die
}
