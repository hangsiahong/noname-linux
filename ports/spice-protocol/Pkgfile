name=spice-protocol
version=0.12.12
desc="protocol headers for interaction with virtualized desktop devices"
source="http://spice-space.org/download/releases/spice-protocol-$version.tar.bz2"

build() {
	cd $name-$version
	./configure --prefix=/ \
		--datarootdir=/lib
	make || die
	make DESTDIR=$pkgdir install || die
}
