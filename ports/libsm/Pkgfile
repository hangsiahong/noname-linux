name=libsm
version=1.2.2
desc="X Session Management client library"
deps="libice xorg-proto xtrans"
source="http://xorg.freedesktop.org/releases/individual/lib/libSM-$version.tar.bz2"

build() {
	cd libSM-$version

	./configure --prefix= --disable-static

	make || die
	make DESTDIR="$pkgdir" install || die

	rm "$pkgdir"/share/doc/libSM/SMlib.xml
	rm "$pkgdir"/share/doc/libSM/xsmp.xml
	find "$pkgdir"/share -type d -delete
}

