name=gptfdisk
version=1.0.1
desc="A text-mode partitioning tool that works on GUID Partition Table (GPT) disks"
deps="popt util-linux ncurses"
source="http://downloads.sourceforge.net/project/$name/$name/$version/$name-$version.tar.gz"

build() {
	cd "$srcdir/$name-$version"
	make || die
	install -d "$pkgdir"/bin
	install -d "$pkgdir"/share/doc/gdisk
	install -d "$pkgdir"/share/man/man8
	install -t "$pkgdir/bin" gdisk cgdisk sgdisk fixparts
	install -m644 -t "$pkgdir/share/man/man8" gdisk.8 cgdisk.8 sgdisk.8 fixparts.8
	install -m644 -t "$pkgdir/share/doc/gdisk" README NEWS
}
