name=coreutils
version=8.27
desc="A collection of core GNU utilities"
source="http://ftp.gnu.org/pub/gnu/$name/$name-$version.tar.xz"
deps="attr libgmp acl libcap libressl"

build() {
	cd $name-$version
	export FORCE_UNSAFE_CONFIGURE=1
	./configure --prefix= \
                --libexecdir=/lib \
                --disable-static \
		--enable-nls \
                --enable-no-install-program=groups,hostname,kill,uptime 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	rm -r "$pkgdir"/share/info
}
