# /etc/profile

umask 022
PATH="/bin:/sbin:~/.local/bin"
export PATH
MANPATH=/share/man
export MANPATH

if test -d /etc/profile.d/; then
	for profile in /etc/profile.d/*.sh; do
		test -r "$profile" && . "$profile"
	done
	unset profile
fi

unset TERMCAP

export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$UID/bus
