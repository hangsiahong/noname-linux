name=confuse
version=3.2
desc='C-library for parsing configuration files'
deps=musl
source="https://github.com/martinh/libconfuse/releases/download/v${version}/${name}-${version}.tar.gz"

build() {
	cd $name-$version
	./configure --prefix= --enable-shared --disable-rpath
	make || die
	make DESTDIR="${pkgdir}" install || die
}
