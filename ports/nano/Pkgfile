name=nano
version=2.8.5
desc="Pico editor clone with enhancements"
deps="ncurses file dash"
source="https://www.nano-editor.org/dist/v${version%.*}/${name}-${version}.tar.gz"

build() {
	cd ${name}-${version}
	CFLAGS="-DREG_STARTEND=0" \
	./configure --prefix= \
	--sysconfdir=/etc \
	--enable-color \
	--enable-nanorc \
	--enable-multibuffer \
	--disable-wrapping-as-root
	make || die
	make DESTDIR=${pkgdir} install || die
	install -DTm644 doc/sample.nanorc ${pkgdir}/etc/nanorc
}
