name=xorg-xinit
version=1.3.4
desc="X Window System initializer"
deps=xorg-server
source="http://xorg.freedesktop.org/releases/individual/app/xinit-$version.tar.bz2
https://raw.githubusercontent.com/voidlinux/void-packages/master/srcpkgs/xinit/patches/fs25361.patch
multi.patch
Xsession
xinitrc
xinitrc.skel
xserverrc"

build() {
	cd xinit-$version
	patch -p0 < ../fs25361.patch || die
	patch -p1 < ../multi.patch || die
	./configure --prefix=/ --with-xinitdir=/etc/X11/xinit
	make || die
	make DESTDIR="$pkgdir" install || die
	install -m755 -d "$pkgdir"/etc/skel
	install -m755 "$srcdir"/Xsession "$pkgdir"/etc/X11/xinit/Xsession
	install -m755 "$srcdir"/xinitrc "$pkgdir"/etc/X11/xinit/xinitrc
	install -m755 "$srcdir"/xinitrc.skel "$pkgdir"/etc/skel/.xinitrc
	install -m755 "$srcdir"/xserverrc "$pkgdir"/etc/X11/xinit/xserverrc
	mkdir -p "$pkgdir"/etc/X11/xinit/xinitrc.d
}
