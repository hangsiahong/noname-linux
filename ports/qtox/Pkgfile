name=qtox
_name=qTox
version=1.11.0
desc='Powerful Tox client written in C++/Qt that follows the Tox design guidelines'
deps="libxscrnsaver openal gtk ffmpeg qrencode qt5-svg sqlcipher toxcore qt5-tools"
source="https://github.com/qTox/qTox/archive/v$version.tar.gz"

ext() {
	cd qTox-$version
	for i in $source; do
		case $i in
		*patch) patch -p1 < ../gcc7.patch;;
		esac
	done
}

build() {
	mkdir build
	cd build
	cmake ../qTox-$version -DCMAKE_INSTALL_PREFIX=
	make || die
	make DESTDIR="$pkgdir" install || die
}
