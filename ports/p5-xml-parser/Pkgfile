name=p5-xml-parser
version=2.44
desc="XML::Parser"
deps="expat perl"
source="http://search.cpan.org/CPAN/authors/id/T/TO/TODDR/XML-Parser-$version.tar.gz"

build() {
	cd XML-Parser-$version
	perl Makefile.PL
	make OPTIMIZE="$CFLAGS" || die
	make DESTDIR="$pkgdir" install || die
	find "$pkgdir" -name .packlist -o \
		-name README -o \
		-name '*.bs' | xargs rm
}
