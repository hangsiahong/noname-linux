name=twmn
version=git
desc="dwm notify"
deps="libxext boost qt5-x11extras libxkbcommon"

ext() {
	git clone --depth=1 https://github.com/sboli/${name}.git
}

build(){
	cd $name
	qmake
	make || die
	install -Dm755 "bin/${name}c" "${pkgdir}/bin/${name}c"
	install -Dm755 "bin/${name}d" "${pkgdir}/bin/${name}d"
}
