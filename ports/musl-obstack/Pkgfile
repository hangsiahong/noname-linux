name=musl-obstack
version=1.1
deps="automake libtool musl"
desc="Implementation of obstack for musl libc"
source="https://github.com/pullmoll/${name}/archive/v${version}.tar.gz"

build() {
	export CFLAGS="-fPIC"
	cd $name-$version
	./bootstrap.sh
	./configure --prefix= --disable-shared 
	make  || die
	make DESTDIR="$pkgdir" install  || die
	install -Dm644 ${name}.pc "$pkgdir"/lib/pkgconfig/$name.pc
}
