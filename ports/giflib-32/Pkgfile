. $PORTS/giflib/Pkgfile
name=giflib-32
deps="giflib"

build() {
	cd giflib-$version
	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/lib32/pkgconfig"
	./configure --prefix= --libdir=/lib32 --disable-static
	make || die
	make DESTDIR="$pkgdir" install || die
	rm -rf "${pkgdir}"/include
	rm -rf "${pkgdir}"/share
	rm -rf "${pkgdir}"/bin
}
