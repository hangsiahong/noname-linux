name=publicsuffix-list
_gitcommit=45a2bf8ef3e22000fbe4bfa5f9252db41d777001
version=20170118.560.45a2bf8
desc='Cross-vendor public domain suffix database'

ext() {
	git clone "https://github.com/publicsuffix/list"
	cd list
	git reset --hard ${_gitcommit}
}

build() {
	cd list
	install -Dm 644 public_suffix_list.dat tests/test_psl.txt -t "${pkgdir}/share/publicsuffix"
	ln -s public_suffix_list.dat "${pkgdir}/share/publicsuffix/effective_tld_names.dat"
}

