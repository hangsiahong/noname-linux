name=libexif
version=0.6.21
deps=musl
desc="A library to parse an EXIF file and read the data from those tags"
source="
http://downloads.sf.net/sourceforge/${name}/${name}-${version}.tar.bz2
"

build() {
	cd $name-$version
	./configure \
		--prefix= \
		--disable-static
	make
	make DESTDIR="$pkgdir" install
}
