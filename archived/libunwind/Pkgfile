name=libunwind
version=1.2.1
desc="Portable and efficient C programming interface (API) to determine the call-chain of a program"
deps="musl xz"
source="https://savannah.nongnu.org/download/$name/$name-$version.tar.gz"

build() {
	cd $name-$version
	sed -i /SUBDIRS/s/tests// Makefile.am
	autoreconf -fi
	./configure CFLAGS="$CFLAGS -U_FORTIFY_SOURCE" --prefix=/ 
	make
	make DESTDIR="${pkgdir}" install
}
