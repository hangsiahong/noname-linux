version="3.2.1"
desc='C-library for parsing configuration files'
source=[{url="https://github.com/martinh/libconfuse/releases/download/v${version}/${name}-${version}.tar.gz"}]

build='''
	cd $name-$version
	./configure --prefix= --enable-shared --disable-rpath
	make 
	make DESTDIR="${pkgdir}" install
'''
