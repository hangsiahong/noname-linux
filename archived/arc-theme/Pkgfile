name=arc-theme
version=20180715
deps="gtk3 sassc"
desc="A flat theme with transparent elements for GTK 3, GTK 2 and Gnome-Shell. Official releases only."
source="https://github.com/NicoHood/arc-theme/releases/download/$version/arc-theme-$version.tar.xz"

build() {
	cd arc-theme-$version

	./autogen.sh --prefix=/ --disable-static \
	--disable-cinnamon \
	--disable-gnome-shell \
	--disable-metacity \
	--disable-unity \
	--disable-xfwm

	make
	make DESTDIR="$pkgdir" install
}
