version=2016
desc="A pixel Chinese font"
source=[
	{url="https://github.com/SolidZORO/zpix-pixel-font/raw/master/dist/Zpix.ttf"},
	{url="https://github.com/SolidZORO/zpix-pixel-font/raw/master/src/Zpix.bdf"},
]

build='''
	mkdir -p  "$pkgdir"/share/fonts/zpix
	cp *.ttf "$pkgdir"/share/fonts/zpix
	cp *.bdf "$pkgdir"/share/fonts/zpix
'''
