name=qtox
_name=qTox
version=1.15.0
desc='Powerful Tox client written in C++/Qt that follows the Tox design guidelines'
deps="libxscrnsaver openal ffmpeg qrencode qt5-svg sqlcipher toxcore qt5-tools"
source="https://github.com/qTox/qTox/archive/v$version.tar.gz
musl.patch"

ext() {
	cd qTox-$version
	sed -i '/Werror/d' CMakeLists.txt
	for i in $source; do
		case $i in
		*patch) patch -p1 < ../$i;
		esac
	done
}

build() {
	mkdir build
	cd build
	cmake ../qTox-$version -DCMAKE_INSTALL_PREFIX=
	make
	make DESTDIR="$pkgdir" install
}
