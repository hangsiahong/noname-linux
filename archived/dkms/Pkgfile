name=dkms
version=2.5
desc='Dynamic Kernel Modules System'
deps="linux bash kmod make patch"
source="https://github.com/dell/dkms/archive/v$version.tar.gz"

build() {
	cd dkms-$version
	make \
		DESTDIR="$pkgdir" \
		MAN="$pkgdir"/share/man/man8 \
		SHAREDIR="$pkgdir"/share \
		LIBDIR="$pkgdir"/lib/dkms \
		SBIN="$pkgdir/bin" \
		BASHDIR="$pkgdir/share/bash-completion/completions" \
		KCONF="$srcdir"/kconf \
	install || die
}
