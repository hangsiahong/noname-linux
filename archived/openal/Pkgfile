name=openal
version=1.18.2
desc="Cross-platform 3D audio library, software implementation"
deps="alsa-lib cmake pulseaudio sdl2 ffmpeg"
source="https://github.com/kcat/openal-soft/archive/openal-soft-$version.tar.gz"

build() {
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX= -DCMAKE_INSTALL_LIBDIR=lib -DCMAKE_BUILD_TYPE=Release ../openal-soft-openal-soft-$version
	make
	make DESTDIR="$pkgdir/" install
}
