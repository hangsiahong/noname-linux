name=libbsd
version=0.8.7
desc='Provides useful functions commonly found on BSD systems like strlcpy()'
source="https://libbsd.freedesktop.org/releases/libbsd-$version.tar.xz
musl.patch"

ext() {
	cd libbsd-$version
	patch -p0 < ../musl.patch
}

build() {
	cd libbsd-$version
	./configure --prefix=
	make
	make DESTDIR="$pkgdir" install
	rm "${pkgdir}"/lib/libbsd.a
}
